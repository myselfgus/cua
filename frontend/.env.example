# CUA Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

########################################
######### Core CUA Configuration ######
########################################

# Application URL
APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_PATH=

# Backend FastAPI URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# MCP Gateway URL (Docker MCP Gateway)
NEXT_PUBLIC_MCP_GATEWAY_URL=http://localhost:8001

# AI Gateway (Cloudflare or alternative)
NEXT_PUBLIC_AI_GATEWAY_URL=your_ai_gateway_url_here

########################################
######### Database Configuration #######
########################################

# Vector Database (Qdrant)
NEXT_PUBLIC_QDRANT_URL=http://localhost:6333

# Graph Database (Neo4j)  
NEXT_PUBLIC_NEO4J_URL=bolt://localhost:7687

# Cache (Redis)
NEXT_PUBLIC_REDIS_URL=redis://localhost:6379

########################################
######### Sandbox & Execution #########
########################################

# E2B Desktop Sandbox
NEXT_PUBLIC_E2B_ENDPOINT=your_e2b_endpoint_here

########################################
########## AI Provider Services ########
########################################

# Primary AI provider (for CUA agent)
OPENAI_API_KEY=sk-your_openai_key_here

# Cloudflare AI Gateway (recommended for CUA)
CLOUDFLARE_API_KEY=your_cloudflare_ai_gateway_key_here
CLOUDFLARE_BASE_URL_OR_ACCOUNT_ID=your_account_id_here

# Anthropic (Claude) - optional
# ANTHROPIC_API_KEY=your_anthropic_key_here

########################################
########## Development & Debug #########
########################################

# Service mode
NEXT_PUBLIC_SERVICE_MODE=client

# Desktop app flag (set to 1 for desktop build)
NEXT_PUBLIC_IS_DESKTOP_APP=0

# Enable authentication (optional)
NEXT_PUBLIC_ENABLE_NEXT_AUTH=0
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Analytics & Monitoring (optional)
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

########################################
########## MCP Configuration ###########
########################################

# MCP tool call timeout (milliseconds)
MCP_TOOL_TIMEOUT=60000

# Enable specific MCP tools
ENABLE_GITHUB_MCP=true
ENABLE_PLAYWRIGHT_MCP=true
ENABLE_E2B_MCP=true
